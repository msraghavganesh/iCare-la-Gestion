/* Done by Raghav Ganesh :)
 * 191ME241
 * P1 - Program to read various items ,calculate amounts and shared amount with friends
 */ 

#include <stdio.h>

//Structure Defination
struct item
{
    char name[20];
    float price, amt;
    int qty;
} obj[100];

//Main Function
int main()
{
    //Variable declaration and initialization
    int i = 0, temp;
    float total = 0;
    while (1)
    {
        //inputting values and storing them in structure variables
        printf("Enter item details[%d]:\nItem? ", i + 1);
        scanf("%s", obj[i].name);
        printf("Price? ");
        scanf("%f", &obj[i].price);
        printf("Quantity? ");
        scanf("%d", &obj[i].qty);
        printf("Want to add more items(press 1 for Yes; 0 for NO): ");
        scanf("%d", &temp);
        obj[i].amt = obj[i].price * obj[i].qty;
        total += obj[i].amt;
        i++;
        if (!temp)
            break;
    }
    
    //Printing output based on question
    printf("All details are:\n");
    for (int j = 0; j < i; j++)
        printf("%s %.2f %d %.2f\n", obj[j].name, obj[j].price, obj[j].qty, obj[j].amt);

    printf("####Total Expense: %.2f", total);
    printf("\nWant to divide in friends(press 1 for yes): ");
    scanf("%d", &temp);
    if (temp)
    {
        printf("How many friends? ");
        scanf("%d", &temp);
        printf("Each friend will have to pay: %.2f", total / temp);
    }
    printf("\n\n~Thanks for using me... Enjoy your party!!!~\n");
    return 0;
}
/* Done by Raghav Ganesh :)
 * 191ME241
 * P2 - Program to print employee daata using structure
 */ 

#include <stdio.h>

//Structure Defination
struct emp
{
    char name[20];
    int id, salary;
} obj[100], temp;

//Main Function
int main()
{
    //Variable declaration 
    int n;

    printf("How many employee details to add: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++)
    {
        //inputting values and storing them in structure variables
        printf("Enter employee details[%d]:\n", i + 1);
        printf("Name: ");
        scanf("%s", obj[i].name);
        printf("ID: ");
        scanf("%d", &obj[i].id);
        printf("Salary: ");
        scanf("%d", &obj[i].salary);
    }

    //Simple bubble sort of increasing order
    for (int i = 0; i < n; i++)
        for (int j = 0; j < n - i - 1; j++)
            if (obj[j].salary > obj[j + 1].salary)
            {
                //Swapping 
                temp = obj[j];
                obj[j] = obj[j + 1];
                obj[j + 1] = temp;
            }

    printf("\nName\t\tID\t\tSalary\n");
    for (int i = 0; i < n; i++)
        printf("%s\t\t%d\t\t%d\n", obj[i].name, obj[i].id, obj[i].salary);
    return 0;
}
/* Done by Raghav Ganesh :)
 * 191ME241
 * P3 - Program to add distance in feet and inches
 */ 

#include <stdio.h>

//Structure Defination
struct dist
{
    float feet;
    float inch;
};

//Main Function
int main()
{
    //Structure objects
    struct dist d1;

    //inputting values and storing them in structure variables
    printf("enter first distance in feet and inches\n");
    scanf("%f%f", &d1.feet, &d1.inch);

    //Function call
    adddistance(d1);
    return 0;
}
void adddistance(struct dist d1)
{
    //Converts inch to feet and vice versa and then adds
    struct dist d3;
    d3.feet = d1.feet + ((d1.inch) * 0.0833);
    d3.inch = ((d1.feet) * 12) + d1.inch;
    printf("total distance-in feet=%.3f\n in inches=%0.3f\n", d3.feet, d3.inch);
}
